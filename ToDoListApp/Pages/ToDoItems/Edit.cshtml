@page "{id:Guid}"
@model ToDoListApp.Pages.ToDoItems.EditModel
@{
    var errorMessage = ViewData["ErrorMessage"]?.ToString();
}

<form method="post" asp-page="./index">

    <h1 class="mb-5">Edit To Do Item</h1>

    <div class="mb-3">
        <label class="form-label">Id: </label>
        <input type="text" class="form-control" asp-for="EditToDoItemRequest.Id" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Name: </label>
        <input type="text" class="form-control" placeholder="Name" asp-for="EditToDoItemRequest.Name" />
        <span asp-validation-for="EditToDoItemRequest.Name" class="text-danger"></span>
        @if (!string.IsNullOrWhiteSpace(errorMessage))
        {
            <span class="text-danger" role="alert">
                @errorMessage
            </span>
        }
    </div>
    <div class="mb-3">
        <label class="form-label">Priority: </label>
        <input type="number" class="form-control" placeholder="Priority" asp-for="EditToDoItemRequest.Priority" />
        <span asp-validation-for="EditToDoItemRequest.Priority" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Status: </label>
        <select class="form-control" asp-for="EditToDoItemRequest.Status">
            <option selected="selected" value="0">Not Started</option>
            <option value="1">In Progress</option>
            <option value="2">Completed</option>
        </select>
    </div>
    <div class="row">
        <div class="mb-3 col-1">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
        <div class="mb-3 col-1">
            <a href="/index" class="align-content-center btn btn-secondary">Back</a>
        </div>
    </div>

</form>